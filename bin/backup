#! /app/.heroku/node/bin/node
var config        = require('../config');
var RSVP          = require('rsvp');
var firebaseUtils = require('../utils/firebase');
var fbRef         = firebaseUtils.initializeFirebase();
var AWS           = require('aws-sdk');
var crypto        = require('crypto');

AWS.config.region = 'us-east-1';

var s3            = new AWS.S3({});

function getFilename(data) {
  return 'backups/' + crypto.createHash('md5').update(JSON.stringify(data)).digest('hex') + '.json';
}

firebaseUtils
  .authAsAdmin(fbRef)
  .then(function() {
    return new RSVP.Promise(function(resolve) {
      fbRef.once('value', function(sn) {
        resolve(sn.val() || {});
      });
    });
  })
  .then(function(data) {
    return new RSVP.Promise(function(resolve, reject) {
      var filename = getFilename(data);
      data         = JSON.stringify(data);

      s3.putObject({
        Bucket      : config.S3_BUCKET,
        Key         : filename,
        Body        : data,
        ContentType : 'application/json'
      }, function(err/*, data*/) {
        if(err) {
          reject(err);
        } else {
          resolve(filename);
        }
      });
    });
  })
  .then(function(filename) {
    console.log('Backup complete - '+filename);
    process.exit();
  })
  .catch(function(err) {
    console.log(err);
    process.exit();
  });